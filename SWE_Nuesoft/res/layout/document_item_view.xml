<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.mobile.nuesoft"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@null"
    android:clickable="false"
    android:focusable="false"
    android:gravity="center" >

    <RelativeLayout
        android:id="@+id/rl_container"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:layout_marginBottom="4dip"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="8dip"
        android:layout_marginTop="4dip"
        android:background="@drawable/btn_background_clickable_item"
        android:clickable="true" >

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="48dip"
            android:layout_height="48dip"
            android:padding="4dip"
            android:src="@drawable/place_holder_icon" />

        <ImageView
            android:id="@+id/more"
            android:layout_width="24dip"
            android:layout_height="32dip"
            android:layout_alignParentRight="true"
            android:src="@drawable/menu_overflow" />

        <View
            android:id="@+id/divider"
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:layout_margin="4dip"
            android:layout_toRightOf="@id/iv_icon"
            android:background="@color/light_grey" />

        <com.mobile.nuesoft.ui.NuesoftTextView
            android:id="@+id/nt_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dip"
            android:layout_toLeftOf="@id/more"
            android:layout_toRightOf="@id/divider"
            android:padding="4dip"
            android:textColor="#282828"
            custom:textStyle="fonts/Roboto-Bold.ttf" />
    </RelativeLayout>

</RelativeLayout>